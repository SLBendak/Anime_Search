<div class="login-signup-container">

  <form action="/auth/signup" method="POST">
    <div class="form-group">
      <label for="new-email">Email address</label>
      <input class="form-control" id="new-email" type="email" name="email" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="new-name">Username</label>
      <input class="form-control" id="new-name" type="text" name="name">
    </div>
    <div class="form-group">
      <label for="new-password">Password</label>
      <input class="form-control" id="new-password" type="password" name="password">
    </div>
    <button type="submit" class="btn btn-primary" value="Sign up">Submit</button>
  </form>

</div>